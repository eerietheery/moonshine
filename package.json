{
  "name": "moonshine",
  "productName": "moonshine",
  "version": "1.1.7",
  "description": "",
  "main": "src/main/main.js",
    "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "postbuild": "signtool sign /f dist\\moonshine-dev.pfx /p \"%MOONSHINE_CERT_PASSWORD%\" /tr http://timestamp.digicert.com /td sha256 /fd sha256 \"dist\\Moonshine %npm_package_version%.exe\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "music-metadata": "^11.7.3",
    "node-id3": "^0.2.9"
  },
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.moonshine.player",
    "productName": "Moonshine",
    "win": {
      "icon": "assets/images/moonshine.ico",
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "verifyUpdateCodeSignature": false,
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "include": "build/installer.nsh",
      "installerIcon": "assets/images/moonshine.ico",
      "uninstallerIcon": "assets/images/moonshine.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "!docs/**"
    ]
  }
}
